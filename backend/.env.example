# Backend Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/voenix_java
DATABASE_USERNAME=your_db_username
DATABASE_PASSWORD=your_db_password

# OpenAI API Configuration
# Required for AI image generation (when app.test-mode=false)
OPENAI_API_KEY=your_openai_api_key_here

# Test Mode Configuration
# When set to true, image generation will be mocked without calling OpenAI API
# This saves API costs during development and testing
# Set to false or omit for production use with real AI generation
# app.test-mode=true

# Application Base URL
# Used for PDF QR codes and other URL generation
APP_BASE_URL=http://localhost:8080