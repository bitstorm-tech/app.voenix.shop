########################################
# Database
########################################
# Default to sqlite file (local dev)
DATABASE_URL=sqlite:///./app.db
# Example Postgres URL (uncomment to use Postgres)
# DATABASE_URL=postgres://{user}:{password}@localhost:5432/voenix?sslmode=disable

########################################
# Migrations
########################################
# Run GORM automigrations for domain tables on startup
AUTO_MIGRATE=true

########################################
# Sessions
########################################
# Session TTL in seconds (default 7 days)
SESSION_TTL_SECONDS=604800

########################################
# Server
########################################
# Bind address for the Go server
ADDR=:8080
# Comma-separated; include * to allow any (dev only)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

########################################
# Storage
########################################
# Filesystem root for images (required by internal/image)
# Example structure will be created as needed:
#   ${STORAGE_ROOT}/public/images
#   ${STORAGE_ROOT}/private/images
# NOTE: Inside the Docker image, the default is /app/storage
STORAGE_ROOT=./storage

########################################
# AI (common config)
########################################
# When true, force the mock AI generator and bypass external API calls
TEST_MODE=false

########################################
# AI (Google)
########################################
# Required to enable /api/ai/images endpoints
GOOGLE_API_KEY=
# Optional; defaults to gemini-2.5-flash-image-preview when empty
GEMINI_IMAGE_MODEL=
# Optional; save the scaled image to a temp folder; not set = false
GEMINI_SAVE_SCALED_IMAGES=

########################################
# AI (OpenAI)
########################################
# Required to enable /api/ai/images endpoints
OPENAI_API_KEY=
# Optional; defaults to gpt-image-1 when empty
OPENAI_IMAGE_MODEL=

########################################
# Order PDF SFTP Upload
########################################
# Comma-separated list of profile names. Example: ORDER_PDF_FTP_CONFIGS=primary,backup
# The list order controls upload order; for a single target use ORDER_PDF_FTP_CONFIGS=primary
ORDER_PDF_FTP_CONFIGS=
# Define one block per profile by replacing PROFILE with the uppercased name from the list
# and appending it to each key.
# Required settings per profile:
# ORDER_PDF_FTP_SERVER_PRIMARY=primary.example.com
# ORDER_PDF_FTP_USER_PRIMARY=primary-user
# ORDER_PDF_FTP_PASSWORD_PRIMARY=primary-pass
# ORDER_PDF_FTP_SERVER_BACKUP=backup.example.com
# ORDER_PDF_FTP_USER_BACKUP=backup-user
# ORDER_PDF_FTP_PASSWORD_BACKUP=backup-pass
# Optional settings per profile:
# ORDER_PDF_FTP_FOLDER_PRIMARY=orders/primary
# ORDER_PDF_FTP_TIMEOUT_PRIMARY=10
# ORDER_PDF_FTP_SKIP_HOST_KEY_VERIFICATION_PRIMARY=false
# ORDER_PDF_FTP_KNOWN_HOSTS_PATH_PRIMARY=/home/app/.ssh/known_hosts
# ORDER_PDF_FTP_FALLBACK_FILENAME_PRIMARY=order.pdf
# ORDER_PDF_FTP_FOLDER_BACKUP=orders/backup
# ORDER_PDF_FTP_TIMEOUT_BACKUP=12
# ORDER_PDF_FTP_SKIP_HOST_KEY_VERIFICATION_BACKUP=true
# ORDER_PDF_FTP_KNOWN_HOSTS_PATH_BACKUP=/home/app/.ssh/backup_known_hosts
# ORDER_PDF_FTP_FALLBACK_FILENAME_BACKUP=order-backup.pdf
