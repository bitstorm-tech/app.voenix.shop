<?xml version="1.0" encoding="UTF-8"?>
<requirements>
    <title>Mug variants</title>
    <description>Think hard to create the best possible architecture and plan.</description>
    
    <requirement-list>
        <requirement id="1">
            <description>Implement a new entity MugVariant in @backend/src/main/kotlin/com/jotoai/voenix/shop/mugs</description>
        </requirement>
        
        <requirement id="2">
            <description>Implement all related code (Controller, DTOs, Services, etc.)</description>
        </requirement>
        
        <requirement id="3">
            <description>MugVariant has the following fields:</description>
            <fields>
                <field>
                    <name>color_code</name>
                    <type>string</type>
                    <nullable>false</nullable>
                </field>
                <field>
                    <name>example_image_filename</name>
                    <type>string</type>
                    <nullable>false</nullable>
                </field>
            </fields>
        </requirement>
        
        <requirement id="4">
            <description>One Mug can have many MugVariants</description>
            <relationship>
                <type>one-to-many</type>
                <from>Mug</from>
                <to>MugVariant</to>
            </relationship>
        </requirement>
        
        <requirement id="5">
            <description>One MugVariant can have one Mug</description>
            <relationship>
                <type>many-to-one</type>
                <from>MugVariant</from>
                <to>Mug</to>
            </relationship>
        </requirement>
    </requirement-list>
</requirements>