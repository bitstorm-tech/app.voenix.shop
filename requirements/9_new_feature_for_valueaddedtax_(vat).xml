<?xml version="1.0" encoding="UTF-8"?>
<requirements>
    <title>New feature for ValueAddedTax (VAT)</title>
    <description>Implement a new feature for Value Added TAX (VAT). Implement the necessary files in the backend and the frontend. Think hard to create the best possible architecture and plan.</description>
    
    <requirement-list>
        <backend-requirements>
            <requirement id="1">
                <description>New Entity with all relevant code (Entity, Controller, DTOs, etc.)</description>
            </requirement>
            
            <requirement id="2">
                <description>The API should live in the admin package</description>
                <api-location>admin package</api-location>
            </requirement>
            
            <requirement id="3">
                <description>Fields for the entity:</description>
                <entity-fields>
                    <field>
                        <name>name</name>
                        <type>string</type>
                        <nullable>false</nullable>
                    </field>
                    <field>
                        <name>percent</name>
                        <type>integer</type>
                        <nullable>false</nullable>
                    </field>
                    <field>
                        <name>description</name>
                        <type>text</type>
                        <nullable>true</nullable>
                    </field>
                </entity-fields>
            </requirement>
        </backend-requirements>
        
        <frontend-requirements>
            <requirement id="4">
                <description>Add a page to list all available VAT entries</description>
            </requirement>
            
            <requirement id="5">
                <description>Add a page to edit existing or create new VAT entries</description>
            </requirement>
            
            <requirement id="6">
                <description>New AdminSidebar entry under Masterdata</description>
                <sidebar-location>Masterdata</sidebar-location>
            </requirement>
            
            <requirement id="7">
                <description>Follow the design principles of existing pages like @frontend/src/pages/admin/Prompts.tsx</description>
                <reference-page>@frontend/src/pages/admin/Prompts.tsx</reference-page>
            </requirement>
        </frontend-requirements>
    </requirement-list>
</requirements>